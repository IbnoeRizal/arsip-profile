generator client {
  provider = "prisma-client-js"
  // output   = "../app/generated/prisma"
  engineType = "client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
}

enum Category {
  FILE
  FOLDER
}

model User {
  id          String   @id @default(cuid())
  email       String   @unique
  name        String?  @unique
  bio         String?
  role        Role     @default(USER)
  jabatanId   String
  jabatan     Jabatan  @relation(fields: [jabatanId], references: [id])
  driveFolder DriveObj[]
  mengajar    Mengajar[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model DriveObj {
  id        String   @id @default(cuid())
  link      String? 
  useremail String?  @unique
  user      User?    @relation(fields: [useremail], references: [email])
  category  Category @default(FOLDER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Jabatan {
  id   String @id @default(cuid())
  title String 
  user User[]
}

model Mengajar{
  id String @id @default(cuid())
  idUser String 
  idKelas String 
  idMapel String

  user User @relation(fields: [idUser], references: [id])
  kelas Kelas @relation(fields: [idKelas], references: [id])
  mapel Mapel @relation(fields: [idMapel], references: [id])

  createdAt DateTime @default(now())
  
  @@unique([idUser, idKelas, idMapel])
}

model Kelas {
  id String @id @default(cuid())
  nama String @unique
  mengajar Mengajar[]
  updatedAt DateTime @default(now())
  createdAt DateTime @updatedAt
}

model Mapel{
  id String @id @default(cuid())
  nama String @unique
  mengajar Mengajar[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}